extends layout

block content
  h1 Login
  p Please login below
  form(method='post', action='/users/login', enctype='multipar/form-data')
    .form-group
      label User Name
      input.form-control(name='username', type='text', placeholder='Enter user name')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Enter password')
    input.btn.btn-default(name='submit', type='submit', value='Login')
